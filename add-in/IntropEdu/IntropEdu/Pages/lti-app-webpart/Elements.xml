<?xml version="1.0" encoding="utf-8"?>
<Elements xmlns="http://schemas.microsoft.com/sharepoint/">
  <ClientWebPart Name="lti-app-webpart" Title="lti-app-webpart Title" Description="lti-app-webpart Description" DefaultWidth="300" DefaultHeight="200">

    <!-- Content element identifies the location of the page that will render inside the client web part
         Properties are referenced on the query string using the pattern _propertyName_
         Example: Src="~appWebUrl/Pages/ClientWebPart1.aspx?Property1=_property1_" -->
    <Content Type="html" Src="~appWebUrl/Pages/lti-app-webpart.aspx?{StandardTokens}&amp;toolName=_name_&amp;consumerKey=_key_&amp;secret=_secret_" />

    <!-- Define properties in the Properties element.
         Remember to put Property Name on the Src attribute of the Content element above. -->
    <Properties>
      <Property
        WebDisplayName="Tool Name"
        Name="name"
        Type="string"
        RequiresDesignerPermission="true"
        WebCategory="LTI App Properties"
        DefaultValue="-"
        WebBrowsable="true"></Property>
      <Property
        WebDisplayName="Consumer Key"
        Name="key"
        Type="string"
        RequiresDesignerPermission="true"
        WebCategory="LTI App Properties"
        DefaultValue="-"
        WebBrowsable="true"></Property>
      <Property
        WebDisplayName="Secret"
        Name="secret"
        Type="string"
        RequiresDesignerPermission="true"
        WebCategory="LTI App Properties"
        DefaultValue="-"
        WebBrowsable="true"></Property>
    </Properties>

  </ClientWebPart>
</Elements>
